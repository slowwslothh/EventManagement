{% extends 'base.html.twig' %}
{% block content %}

    <div class="page-content bg-white">
    <!-- contact area -->
    <div class="dez-bnr-inr overlay-black-middle" style="background-image:url(frontOffice/images/banner/bnr1.jpg);">
        <div class="container">
            <div class="dez-bnr-inr-entry">
                <h1 class="text-white">Modifier Event</h1>
                <!-- Breadcrumb row -->
                <div class="breadcrumb-row">
                    <ul class="list-inline">
                        <li><a href="#">Home</a></li>
                        <li>Modifier Event</li>
                    </ul>
                </div>
                <!-- Breadcrumb row END -->
            </div>
        </div>
    </div>
    <div class="content-block">
        <!-- Browse Jobs -->
        <div class="section-full bg-white p-t50 p-b20">
            <div class="container">
                <div class="row">


                    <div class="job-bx submit-resume">
                        <div class="job-bx-title clearfix">
                            <h5 class="font-weight-700 pull-left text-uppercase">Update An Event </h5>
                            <a href="company-profile.html" class="site-button right-arrow button-sm float-right">Back</a>
                        </div>

                        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

                        <div class="row">

                            <div class="col-lg-6 col-md-6">
                                <label>Event Title</label>
                                {{ form_widget(form.nom)}}
                            </div>

                            <div class="col-lg-6 col-md-6">
                                <label>Date Event</label>
                                {{ form_widget(form.date)}}
                            </div>

                            <div class="col-lg-12 col-md-12">
                                <label>Event Description</label>
                                {{ form_widget(form.description)}}
                            </div>

                            <div class="col-lg-6 col-md-6">

                                <label>Price (DT):</label>
                                {{ form_widget(form.prix)}}

                            </div>
                            <div class="col-lg-6 col-md-6">

                                <label>Ticket Number</label>
                                {{ form_widget(form.nbrePlace)}}

                            </div>

                            <div class="col-lg-12 col-md-12">

                                <label>Adress</label>
                                {{ form_widget(form.adresse)}}

                            </div>

                            <div class="col-lg-6 col-md-6">

                                <input type="submit" class="site-button"/>

                            </div>

                        </div>
                        {{ form_end(form)}}

                    </div>
                </div>
            </div>
            <!-- Browse Jobs END -->
        </div>
    </div>

{% endblock %}